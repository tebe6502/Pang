* ---------------------------------------------------------

loop	lda:cmp:req cloc

	mva	oy+0	_m0Old+1
	mva	py+0	_m0New+1
	ldy #0
	jsr shape8

	mva	oy+1	_pm0Old+1
	mva	py+1	_pm0New+1
	ldy #1
	jsr shape16

	mva	oy+2	_m1Old+1
	mva	py+2	_m1New+1
	ldy #2
	jsr shape8

	mva	oy+3	_pm1Old+1
	mva	py+3	_pm1New+1
	ldy #3
	jsr shape16

	jsr credits


	lda:cmp:req cloc

	mva	oy+4	_m2Old+1
	mva	py+4	_m2New+1
	ldy #4
	jsr shape8

	mva	oy+5	_pm2Old+1
	mva	py+5	_pm2New+1
	ldy #5
	jsr shape16

	mva	oy+6	_m3Old+1
	mva	py+6	_m3New+1
	ldy #6
	jsr shape8

	mva	oy+7	_pm3Old+1
	mva	py+7	_pm3New+1
	ldy #7
	jsr shape16

	jsr credits

	lda credits.sync
	cmp #6
	scc
	lda #0
	sta credits.sync


stop	jmp loop

toEnd	bit _end

	lda credits.sync
	jne loop

	mva <credits.ladr2 credits.la2+1
	mva <credits.hadr2 credits.ha2+1

	mwa #napisy+24*40 nap			; TOUR MODE / PANIC MODE
	mva #0 credits.toRTS.txt

	mva #$80 credits.toRTS.halt
	sta credits.cnt

	mva #{jmp*} stop
	sta toEnd

	mwa #select_mode stop+1

	lda select
	jsr select_mode._eor

	jmp loop


_end	jsr fade_out

	lda #{bit}
	sta rmtPlay
