.local	getParam

	lda ox,y
	pha

	mva	lold,y	old
	mva	hold,y	old+1


	lda px,y
	sta ox,y
	pha
	:2 lsr @

	ldx py,y

	add ladr,x
	sta new
	sta lold,y

	lda #0
	adc hadr,x
	sta new+1
	sta hold,y

	txa
	sta oy,y


	ldx mul5,y
	lda px,y
	add #48
	sta hposPM+1,x


	ldx cnt,y
	lda ypath,x
	add yofs,y
	sta py,y
	adc siz,y
	cmp #ymax
	bcc skp3

	lda ym,y
	sta yofs,y

	lda #ymax
	sub siz,y
	sta py,y

loop	dex
	lda ypath,x
	add siz,y
	cmp #ymax
	bcs loop
	bcc skp4

skp3	cpx #0
	beq skp4
	cpx #ylen-1
	bne skp2

skp4	lda ay,y
	eor #$fe
	sta ay,y

skp2	txa
	add ay,y
	sta cnt,y



	lda ax,y
	bpl right

left	add px,y
	cmp #160
	bcs skp1

	sta px,y

	quit


right	add px,y
	cmp mx,y
	bcc skp0

skp1	lda ax,y
	eor #$ff
	add #1
	sta ax,y

	lda px,y

skp0	sta px,y

	quit


