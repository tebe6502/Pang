.macro	@word
	?a = .get[?x]<<16 + .get[?x+1]<<8
	?a = ?a >> ?s

	dta [?a&$ff]
	dta [(?a>>8)&$ff]
	dta [(?a>>16)&$ff]
	.def ?x -= 40
.endm


.macro	@byte
	?a = .get[?x]<<8
	?a = ?a >> ?s

	dta [?a&$ff]
	dta [(?a>>8)&$ff]
	.def ?x -= 40
.endm
