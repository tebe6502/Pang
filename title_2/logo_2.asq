.local	credits

	.var idx row cnt sync .byte

	jmp toRTS
direct	equ *-2


.local	toRTS
	inc cnt
	bpl quit

	lda #0
	sta cnt
	sta row

	inc sync

	sbw nap #(ile_wierszy_tekstu*2)*40

gate	lda #0
	cmp #2
	bne skip

	adw nap	#(ile_wierszy_tekstu*2)*40	;-2*40

	inc txt

	lda #0
txt	equ *-1

	cmp #5+1			; liczba napisow do wyswietlenia
	bne _skp

	mwa #napisy nap

	mva #0 txt

_skp	lda #0
	sta gate+1

skip	inc gate+1

	ldx <toRight
	ldy >toRight

	lda idx
	beq skp

	ldx <toLeft
	ldy >toLeft

skp	stx direct
	sty direct+1

	lda #0
halt	equ *-1
	seq
	mva #{rts} toRTS

quit	rts
.endl


.local	toLeft
	jsr show

	dec idx
	bpl quit

	mva #0	idx

	adw nap #ile_wierszy_tekstu*40

	ldx <toRight
	ldy >toRight

	inc row
	lda row
	cmp #ile_wierszy_tekstu
	bne skp

	ldx <toRTS
	ldy >toRTS

skp	stx direct
	sty direct+1

	inc sync

quit	rts
.endl


.local	toRight
	jsr show

	inc idx
	lda idx
	cmp #40
	bne quit

	mva #39	idx

	adw nap #ile_wierszy_tekstu*40

	ldx <toLeft
	ldy >toLeft

	inc row
	lda row
	cmp #ile_wierszy_tekstu
	bne skp

	ldx <toRTS
	ldy >toRTS

skp	stx direct
	sty direct+1

	inc sync

quit	rts
.endl


